{
    "manifest_version": 2,
    "name": "MODORA",
    "description": "MODORA blocks distracting sites according to the Pomodoro Technique which is proven to increase productivity while preventing overworking and mandating breaks.",
    "version": "1.0",
    "icons": {
        "16": "./images/16.png",
        "32": "./images/32.png",
        "48": "./images/48.png",
        "64": "./images/64.png",
        "128": "./images/128.png"
    }, 

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./block_sites.js"]
        }
    ],
    "background": {
        "scripts": ["timer.js", "block_sites.js", "cookie_functions.js", "background.js"]
    },

    "browser_action": { 
    "default_popup": "popup.html",
    "default_title": "MODORA"
    },
    "permissions": [
        "tabs",
        "alarms", 
        "cookies", 
        "debugger", 
        "webRequestBlocking", 
        "notifications", 
        "tts"
    ]
}
