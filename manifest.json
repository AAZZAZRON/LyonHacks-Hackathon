{
    "manifest_version": 2,
    "name": "Modoro",
    "description": "Procrastinate No More",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./block_sites.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": { 
    "default_popup": "popup.html",
    "default_title": "Hackathon"
    },
    "permissions": [
        "tabs",
        "alarms", 
        "cookies", 
        "debugger", 
        "webRequestBlocking", 
        "notifications", 
        "tts"
    ]
}
